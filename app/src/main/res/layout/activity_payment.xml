<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    android:layout_marginTop="50dp"
    tools:context=".PaymentActivity">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="10dp"
            app:cardCornerRadius="20dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginTop="100dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:orientation="vertical">
                <TextView
            android:id="@+id/textViewRecipientDetails"
            android:layout_width="match_parent"
            android:fontFamily="casual"
            android:layout_height="wrap_content"
            android:text="Recipient Account Details"
            android:textSize="16sp"
            android:layout_marginTop="30dp"
            android:textStyle="bold"/>

        <EditText
            android:fontFamily="casual"
            android:id="@+id/editTextRecipientDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:hint="Enter your Account Details"/>

        <!-- Payment Card Details -->
        <TextView
            android:fontFamily="casual"
            android:id="@+id/textViewCardDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment Card Details"

            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"/>

        <EditText
            android:fontFamily="casual"
            android:id="@+id/editTextCardDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:hint="Enter Payment Card Details"/>

        <!-- Enter Amount -->
        <TextView
            android:fontFamily="casual"
            android:id="@+id/textViewEnterAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Amount"

            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"/>

        <EditText
            android:fontFamily="casual"
            android:id="@+id/editTextAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Amount"
            android:textSize="12sp"
            android:inputType="numberDecimal"/>

        <!-- Pay Button -->
        <Button
            android:fontFamily="casual"
            android:id="@+id/buttonPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pay Now"
            android:background="@drawable/rounded_button"
            android:layout_marginTop="60dp"/>
                </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>